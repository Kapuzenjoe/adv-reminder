<form autocomplete="off">
  {{#with defaultButtonColor}}
    <div class="form-group">
      <label>{{localize this.name}}</label>

      <div class="form-fields">
        <select name="defaultButtonColor" data-dtype="String">
          {{selectOptions choices selected=value localize=true}}
        </select>
      </div>

      <p class="notes">{{localize this.hint}}</p>
    </div>
  {{/with}}

  {{#with customColor}}
    <div class="form-group adv-reminder-customColor">
      <label>{{localize this.name}}</label>

      <div class="form-fields">
        <color-picker name="customColor" value="{{value}}"></color-picker>
      </div>

      <p class="notes">{{localize this.hint}}</p>
    </div>
  {{/with}}

  <button type="test"><i class="fas fa-eye"></i> {{localize "adv-reminder.ColorMenu.Test"}}</button>
</form>
